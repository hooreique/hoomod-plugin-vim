" actual configuration starts from here

" ========================
"
" normal mode
"
" ========================

" ----
" motion
" ----

" cursor up
nnoremap u k
nnoremap <Up> k
" cursor down
nnoremap e j
nnoremap <Down> j
" cursor left
nnoremap n h
nnoremap <Left> h
" cursor right
nnoremap i l
nnoremap <Right> l
" cursor previous paragraph
nnoremap U {k$
" cursor next paragraph
nnoremap E }j^
" cursor previous word
nnoremap N ge
" cursor next word
nnoremap I w
" cursor first letter in the row
nnoremap l ^
" cursor first column in the row
nnoremap h 0
" cursor last column in the row
nnoremap o $
" cursor head
nnoremap H gg
" cursor tail
nnoremap O G$
" cursor previous
nnoremap y ``

" ----
" scroll
" ----

" scroll up
nnoremap f 3<C-Y>
" scroll down
nnoremap s 3<C-E>
" scroll up half screen
nnoremap F <C-U>
" scroll down half screen
nnoremap S <C-D>
" scroll current line to middle
nnoremap <Space> zz

" ----
" clipboard
" ----

" delete (cut)
nnoremap d d
" yank (copy)
nnoremap c y
" put (paste)
nnoremap v p

" ----
" mode
" ----

" to insert mode
nnoremap t a
nnoremap r i
nnoremap T R
nnoremap R O
nnoremap <CR> o
nnoremap <Return> o
nnoremap <Enter> o
" to visual mode
nnoremap g v

" ----
" edit
" ----

" refactor rename
nnoremap a :vsc Refactor.Rename<CR>
" backspace and go to insert mode
nnoremap <BS> dhi
" delete and go to insert mode
nnoremap <Del> xi
" indent
nnoremap <Tab> :vsc Edit.IncreaseLineIndent<CR>
" unindent
nnoremap <S-Tab> :vsc Edit.DecreaseLineIndent<CR>
" comment
nnoremap / :vsc Edit.ToggleLineComment<CR>
" append :
" nnoremap : A:<ESC>
" append ;
nnoremap ; A;<ESC>
" append {
nnoremap { A<Space>{
" undo
" nnoremap z :vsc undo<CR>
" redo
" nnoremap x :vsc redo<CR>

" ----
" editor
" ----

" close current
nnoremap w :vsc File.Close<CR>
" split window
" nnoremap j :vsc <CR>
" focus next window
" nnoremap J :vsc <CR>

" ----
" action
" ----

" find
nnoremap ' :vsc Edit.Find<CR>
" generate
" nnoremap " :vsc <CR>

